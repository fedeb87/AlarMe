<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.addalarm.horoscope.HoroscopeDialogFragment"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="fragment" type="com.federicoberon.newapp.ui.addalarm.horoscope.HoroscopeDialogFragment" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/background_toolbar" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/aries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="8dip"
                android:focusable="true"
                android:clickable="true"
                android:onClick="@{(view) -> fragment.signSelected(view)}">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_gravity="center"
                    android:background="@drawable/aries"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Aries" />

                <TextView
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="21 Mar - 19 Apr"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/taurus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="8dip"
                android:focusable="true"
                android:clickable="true"
                android:onClick="@{(view) -> fragment.signSelected(view)}">

